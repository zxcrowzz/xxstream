  quantityInput.addEventListener('input', function () {
    const quantityValue = parseInt(quantityInput.value, 10);

    // Check that the quantity is valid
    if (isNaN(quantityValue) || quantityValue <= 0 || quantityValue > product.quantity) {
      alert("Please select a valid quantity.");
      return;
    }

    // Re-render the PayPal button with updated price and quantity
    renderPaypalButton(product, quantityValue);
  });
}

let currentPaypalButtonInstance = null; // Store PayPal button instance

function renderPaypalButton(product, quantityValue = 1) {
  // Destroy the existing PayPal button if it exists
  if (currentPaypalButtonInstance) {
    currentPaypalButtonInstance.close(); // Close or destroy the current button
  }

  // Remove old PayPal button (if it exists)
  const paypalButtonContainer = document.getElementById('paypal-button-container');
  paypalButtonContainer.innerHTML = ''; // Clear the old button

  // Render the new PayPal button with the updated price and quantity
  paypal.Buttons({
  createOrder: function (data, actions) {
    console.log("Creating order...");
    return actions.order.create({
      purchase_units: [{
        amount: {
          value: (product.price * quantityValue).toString()
        }
      }]
    }).then(function(orderData) {
      console.log("Order created: ", orderData); // Log the order data
      return orderData.id; // Ensure we are returning the order ID
    });
  },
  onApprove: function (data, actions) {
    console.log("Approving order...");
    return actions.order.capture().then(function (details) {
      console.log("Order captured: ", details);
      const orderDetails = {
        productId: product._id,
        productName: product.name,
        price: product.price,
        quantity: quantityValue,
        vendorId: product.userId._id,
        payerName: `${details.payer.name.given_name} ${details.payer.name.surname}`,
        payerEmail: details.payer.email_address,
        orderId: details.id,
        shippingAddress: details.purchase_units[0].shipping.address
      };

      return fetch('/order/create', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(orderDetails)
      })
      .then(response => response.json())
      .then(data => {
        console.log("Order creation response: ", data);
        if (data.success) {
          alert('Order placed successfully!');
          window.location.href = '/em';
        } else {
          alert('Error placing order: ' + data.message);
        }
      })
      .catch(error => {
        console.error("Error during order placement:", error);
        alert("Failed to place the order. Please try again.");
      });
    });
  }
}).render('#paypal-button-container').then(function (button) {
  currentPaypalButtonInstance = button; // Store the instance for future use
  console.log("PayPal button rendered");
});

